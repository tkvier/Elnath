<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Elnath.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="Elnath.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo.ico"
        Title="Elnath - Auriga Server Manager"
        Width="1000" Height="700" CanResize="False">

  <Design.DataContext>
      <vm:MainWindowViewModel>
        <x:Arguments>
          <x:Null/>
        </x:Arguments>
      </vm:MainWindowViewModel>
  </Design.DataContext>
  <!-- 背景画像 -->
  <DockPanel Margin="0">
    <Grid>
      <!-- 背景画像 -->
      <Image Source="avares:/Assets/background.png"
            Stretch="UniformToFill"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ZIndex="0"/>

      <DockPanel Margin="10" ZIndex="1">
        <!-- 上部のパス設定エリア -->
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
          <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
            <!-- Server Path Row -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="サーバールート:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AurigaPath, Mode=TwoWay}" 
                    Foreground="{Binding AurigaPathBrush}" IsReadOnly="{Binding IsAurigaPathReadOnly}"
                    Watermark="Aurigaのルートパスを入力..."/>
            <Button Grid.Row="0" Grid.Column="2" Content="サーバー起動" Command="{Binding StartAllServersCommand}" IsEnabled="{Binding IsServerStartEnabled}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="サーバー停止" Command="{Binding StopAllServersCommand}" IsEnabled="{Binding IsServerStopEnabled}"/>

            <!-- Client Path Row -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="ROクライアント:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ClientPath, Mode=TwoWay}" 
                    Foreground="{Binding ClientPathBrush}"
                    Watermark="Ragnarok.exeのフルパスを入力..."/>
            <Button Grid.Row="1" Grid.Column="2" Content="クライアント起動" Command="{Binding StartClientCommand}" IsEnabled="{Binding IsClientStartEnabled}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="クライアント設定" Command="{Binding StartClientSetupCommand}" IsEnabled="{Binding IsClientSettingsEnabled}"/>
          </Grid>
        </Border>

        <!-- 3つのサーバー管理区画 -->
        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
          
          <!-- Login Server -->
          <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <DockPanel>
              <TextBlock DockPanel.Dock="Top" Text="ログインサーバー" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
              <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="5">
                <Button Content="再起動" Command="{Binding RestartLoginServerCommand}" IsEnabled="{Binding IsPerServerControlEnabled}"/>
                <Button Content="終了" Command="{Binding StopLoginServerCommand}" IsEnabled="{Binding IsPerServerControlEnabled}"/>
              </StackPanel>
              <ScrollViewer>
                <TextBox x:Name="LoginServerLogBox" Text="{Binding LoginServerOutput}" IsReadOnly="True" TextWrapping="NoWrap" AcceptsReturn="True" FontFamily="Consolas,Menlo,Monospace" TextChanged="LogBox_TextChanged"/>
              </ScrollViewer>
            </DockPanel>
          </Border>

          <!-- Char Server -->
          <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
            <DockPanel>
              <TextBlock DockPanel.Dock="Top" Text="キャラクターサーバー" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
              <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="5">
                <Button Content="再起動" Command="{Binding RestartCharServerCommand}" IsEnabled="{Binding IsPerServerControlEnabled}"/>
                <Button Content="終了" Command="{Binding StopCharServerCommand}" IsEnabled="{Binding IsPerServerControlEnabled}"/>
              </StackPanel>
              <ScrollViewer>
                <TextBox x:Name="CharServerLogBox" Text="{Binding CharServerOutput}" IsReadOnly="True" TextWrapping="NoWrap" AcceptsReturn="True" FontFamily="Consolas,Menlo,Monospace" TextChanged="LogBox_TextChanged"/>
              </ScrollViewer>
            </DockPanel>
          </Border>

          <!-- Map Server -->
          <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
            <DockPanel>
              <TextBlock DockPanel.Dock="Top" Text="マップサーバー" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
              <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="5">
                <Button Content="再起動" Command="{Binding RestartMapServerCommand}" IsEnabled="{Binding IsPerServerControlEnabled}"/>
                <Button Content="終了" Command="{Binding StopMapServerCommand}" IsEnabled="{Binding IsPerServerControlEnabled}"/>
              </StackPanel>
              <ScrollViewer>
                <TextBox x:Name="MapServerLogBox" Text="{Binding MapServerOutput}" IsReadOnly="True" TextWrapping="NoWrap" AcceptsReturn="True" FontFamily="Consolas,Menlo,Monospace" TextChanged="LogBox_TextChanged"/>
              </ScrollViewer>
            </DockPanel>
          </Border>
          
        </Grid>
      </DockPanel>
    </Grid>
  </DockPanel>
</Window>