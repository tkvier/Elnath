<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AurigaPlus.ViewModels"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="250"
        x:Class="AurigaPlus.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="設定"
        Width="500" Height="250" CanResize="False"
        WindowStartupLocation="CenterOwner">

  <!-- デザイン時用のデータコンテキスト -->
  <Design.DataContext>
    <vm:SettingsViewModel>
      <x:Arguments>
        <x:Null/>
      </x:Arguments>
    </vm:SettingsViewModel>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="15">
    <!-- Auriga Path Input -->
    <StackPanel Grid.Row="0" Margin="0,0,0,10">
      <TextBlock Text="Aurigaのルートパス"/>
      <TextBox Text="{Binding AurigaPath, Mode=TwoWay}">
        <i:Interaction.Behaviors>
          <ia:EventTriggerBehavior EventName="LostFocus">
            <ia:InvokeCommandAction Command="{Binding ValidateAurigaPathCommand}"/>
          </ia:EventTriggerBehavior>
        </i:Interaction.Behaviors>
      </TextBox>
    </StackPanel>

    <!-- Client Path Input -->
    <StackPanel Grid.Row="1" Margin="0,0,0,10">
      <TextBlock Text="Ragnarok Online クライアントのパス"/>
      <TextBox Text="{Binding ClientPath, Mode=TwoWay}">
        <i:Interaction.Behaviors>
          <ia:EventTriggerBehavior EventName="LostFocus">
            <ia:InvokeCommandAction Command="{Binding ValidateClientPathCommand}"/>
          </ia:EventTriggerBehavior>
        </i:Interaction.Behaviors>
      </TextBox>
    </StackPanel>

    <!-- Status Message -->
    <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Padding="5">
        <TextBlock Text="{Binding StatusMessage}" Foreground="Red" VerticalAlignment="Center" TextWrapping="Wrap"/>
    </Border>

    <!-- Buttons -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="保存" Command="{Binding SaveCommand}" IsEnabled="{Binding IsSaveEnabled}" Margin="0,0,10,0"/>
      <Button Content="キャンセル" Click="CancelButton_Click"/>
    </StackPanel>
  </Grid>
</Window>