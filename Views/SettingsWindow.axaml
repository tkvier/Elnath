<!-- Views/SettingsWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="AurigaFrontend.Views.SettingsWindow"
        Width="600" Height="300"
        Title="初回設定">
  <Grid RowDefinitions="Auto,*,Auto" Margin="16">
    <StackPanel Spacing="12">
      <TextBlock Text="初回起動設定: Auriga パス と RO クライアント EXE のパスを入力してください。" />
      <Grid ColumnDefinitions="120,*,Auto" RowDefinitions="Auto,Auto" >
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Auriga パス" />
        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding AurigaPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 LostFocus="{Binding LostFocusValidateAurigaCommand}" />
        <Button Grid.Row="0" Grid.Column="2" Content="参照..." Click="BrowseAuriga_Click" />

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="クライアント EXE" />
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding ClientExePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 LostFocus="{Binding LostFocusValidateClientCommand}" />
        <Button Grid.Row="1" Grid.Column="2" Content="参照..." Click="BrowseClient_Click" />
      </Grid>
    </StackPanel>

    <Border Grid.Row="1" Margin="0,16,0,16" Padding="8" BorderBrush="Gray" BorderThickness="1">
      <TextBlock Text="{Binding StatusMessage}"
                 Foreground="{Binding StatusIsError, Converter={StaticResource BoolToBrushConverter}}" />
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="保存" IsEnabled="{Binding CanSave}" Command="{Binding SaveCommand}" />
    </StackPanel>
  </Grid>
</Window>
